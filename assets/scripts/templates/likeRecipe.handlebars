<div class="container col-md-4">
    <div class="panel panel-default panel-table">
        <div class="panel-body">
            <div class="media">
                <div class="media-body">
                  <h3> {{name}} </h3>
                  <hr>
                  <h5> Category: {{category}} </h5>
                  <div>
                    <h5>Ingredients: </h5>
                    <div class="tr">
                    {{#each ingredients}}
                    <div class="td">
                      {{this}}
                    </div>
                    {{/each}}
                  </div>
                    <!-- <ul>
                      {{#each ingredients}}
                        <li>{{this}}</li>
                      {{/each}}
                   </ul> -->
                  </div>
                  <div>
                    <p>Instructions: </p>
                    <ul>
                     {{#each instructions}}
                      <li>{{this}}</li>
                     {{/each}}
                   </ul>
                  </div>
                <div class="clearfix"></div>
               </div>
            </div>
        </div>
    </div>
</div>
